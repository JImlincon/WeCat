.toolBox {
  width: 38%;
  box-shadow: 10rpx 10rpx 5rpx #bebaba;
  border-radius: 20rpx;
  border: 2rpx solid #bebaba;
  margin: 5%;
  display: inline-block;
}

.imgbox {
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
}

.imgbox image{
    width: 100%;
    height: 400rpx;
    border-radius: 20rpx;
}

.title {
    font-family: 'Times New Roman', Times, serif;
    text-align: center;
    font-size: 32rpx;
    padding: 20rpx 0;
   
}
.title text{
    width: 100%;
     overflow: hidden;
     white-space: nowrap
}